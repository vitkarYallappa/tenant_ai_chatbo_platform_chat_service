# Environment Configuration
ENVIRONMENT=development
DEBUG=false
HOST=0.0.0.0
PORT=8001

# Logging
LOG_LEVEL=INFO

# Database Connections
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=chatbot_conversations
REDIS_URL=redis://localhost:6379
REDIS_DB=0
POSTGRESQL_URI=postgresql://postgres:postgres@localhost:5432/chatbot_config

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=chatbot.platform

# External Services
MCP_ENGINE_URL=localhost:50051
SECURITY_HUB_URL=localhost:50052

# Security
JWT_SECRET_KEY=change-this-in-production-use-strong-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Performance Settings
MAX_CONNECTIONS_MONGO=100
MAX_CONNECTIONS_REDIS=50
REQUEST_TIMEOUT_MS=30000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Settings (remove in production)
RELOAD_ON_CHANGE=true
MOCK_EXTERNAL_SERVICES=false
